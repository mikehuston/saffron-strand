%h2 Details about #{@item.name}

%ul
	%li
		Description:
		= @item.desc
	%li
		Price:
		= @item.price
	%li
		Category:
		= @item.category

= link_to 'Edit', edit_admin_item_path(@item.id)
= button_to 'Delete', admin_item_path(@item.id), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to items', admin_items_path
