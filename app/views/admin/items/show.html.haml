%h2 Details about #{@item.name}

%ul
	%li
		Description:
		= @item.desc
	%li
		Price:
		= @item.price
	%li
		Category:
		= @item.category
	%li
		Image:
		= image_tag @item.image.url

= link_to 'Edit', edit_admin_item_path(@item)
= button_to 'Delete', admin_item_path(@item), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to items', admin_items_path
