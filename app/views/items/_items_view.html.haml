%h2
  = meal_name
  Items:

.col-md-6.col-lg-6
  %dl
    - @items.each do |item|
      %dt= item.name
      -if item.desc
        %dd
          %i=item.desc
      %br

.col-md-3.col-lg-3
  -@items.each do |item|
    -if item.has_image?
      %div=image_tag item.image.url, style: 'width: 250px;'
      %i=item.name
      %br
      %br
