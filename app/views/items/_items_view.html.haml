%br
= link_to 'Brunch', items_brunch_path, :method => :get, :class => "#{meal_name == 'Brunch' ? 'btn btn-primary active' : 'btn btn-default'}"
= link_to 'Lunch', items_lunch_path, :method => :get, :class => "#{meal_name == 'Lunch' ? 'btn btn-primary active' : 'btn btn-default'}"
= link_to 'Dinner', items_dinner_path, :method => :get, :class => "#{meal_name == 'Dinner' ? 'btn btn-primary active' : 'btn btn-default'}"

%h2
  = meal_name + " Menu"
  Items:
%br 
.col-md-6.col-lg-6
  %dl
    - @items.each do |item|
      %dt= item.name
      -if item.desc
        %dd
          %i=item.desc
      %br

.col-md-3.col-lg-3
  -@items.each do |item|
    -if item.has_image?
      %div=image_tag item.image.url, style: 'width: 250px;'
      %i=item.name
      %br
      %br
