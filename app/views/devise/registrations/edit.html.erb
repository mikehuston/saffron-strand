        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li ><%= link_to 'Home', '/home'%></li>
            <li><%= link_to 'Order', '/menu'%></li>
            <li   class="active"><%= link_to('Edit registration', edit_user_registration_path) %></li>
